{
  "scrollTrigger": {
    "defaults": {
      "scrub": 1,
      "markers": false,
      "start": "top 80%",
      "end": "bottom 20%",
      "toggleActions": "play pause resume reset"
    },
    "hero": {
      "parallax": {
        "scrub": true,
        "start": "top top",
        "end": "bottom top"
      },
      "fadeIn": {
        "scrub": false,
        "start": "top center",
        "toggleActions": "play none none reverse"
      }
    },
    "sections": {
      "fadeUp": {
        "y": 50,
        "opacity": 0,
        "duration": 1,
        "stagger": 0.2
      },
      "fadeIn": {
        "opacity": 0,
        "duration": 0.8,
        "delay": 0.2
      },
      "slideIn": {
        "x": -100,
        "opacity": 0,
        "duration": 1
      }
    }
  },
  "transitions": {
    "fast": 0.3,
    "normal": 0.6,
    "slow": 1.2,
    "verySlow": 2
  },
  "easing": {
    "default": "power2.inOut",
    "smooth": "power3.out",
    "bounce": "bounce.out",
    "elastic": "elastic.out(1, 0.3)",
    "back": "back.out(1.7)"
  },
  "hover": {
    "scale": 1.05,
    "duration": 0.3,
    "ease": "power2.out"
  },
  "text": {
    "splitType": "chars",
    "stagger": 0.03,
    "duration": 0.6
  },
  "particles": {
    "count": 50,
    "spread": 100,
    "gravity": 0.05,
    "speed": 2
  }
}